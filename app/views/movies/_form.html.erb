<% render 'shared/errors' %>

<div class='row'>
  <div class='col-xs-12'>
    <div class='well'>
      <%= form_for(@movie, :html => {class: "form-horizontal", role: 'form'}) do |f| %>

        <div class="form-group">
        <div class='control-label col-sm-2'>
          <%= f.label :title %>
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :title, class: 'form-control', placeholder: "Title",
                                          autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class='control-label col-sm-2'>
          <%= f.label :description %>
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :description, class: 'form-control', placeholder: "Description" %>
        </div>
      </div>

      <div class="form-group">
        <div class='control-label col-sm-2'>
          <%= f.label :year %>
        </div>
        <div class='col-sm-8'>
          <%= f.number_field :year, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class='control-label col-sm-2'>
          <%= f.label :director %>
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :director, class: 'form-control', placeholder: "Director" %>
        </div>
      </div>
      <div class="form-group">
        <div class='col-sm-8 col-sm-offset-2'>
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>
