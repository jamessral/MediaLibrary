<p id="notice"><%= notice %></p>

<div class='well well-lg'>
<h1 class='center'>Movies</h1>

<table class='table center col-md-8'>
  <thead>
    <tr>
      <th class='movie-header'>Title</th>
      <th class='movie-header'>Description</th>
      <th class='movie-header'>Year</th>
      <th class='movie-header'>Director</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.description %></td>
        <td><%= movie.year %></td>
        <td><%= movie.director %></td>
        <td><%= link_to 'Show', movie, class: 'btn btn-sm btn-primary' %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie),
                                class: 'btn btn-sm btn-primary' %></td>
        <td><%= link_to 'Destroy', movie, method: :delete,
                                   data: { confirm: 'Are you sure?' },
                                   class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_movie_path, class: 'btn btn-lg btn-success' %>
</div>
